<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Cumulative Project </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/teachers.js"></script>
</head>
<body>
    <div class="container-fluid d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
            <div class="container position-relative">
                @Html.ActionLink("Project - Vaibhav", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Teachers", "Index", "Teacher/list", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Students", "Index", "Student/list", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Classes", "Index", "Classes/list", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container body-content position-relative flex-grow-1">
            @RenderBody()
        </div>

        <footer class="d-flex justify-content-center align-items-center w-100 bg-primary fw-bold">
            <hr />
            <p>&copy; @DateTime.Now.Year - Vaibhav Baria - Cumulative Project</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
